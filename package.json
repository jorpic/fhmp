{
  "private": true,
  "name": "fhmp",
  "version": "0.1.0",
  "author": "Max Taldykin <jorpic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jorpic/fhmp/issues"
  },
  "homepage": "https://github.com/jorpic/fhmp#readme",
  "scripts": {
    "test": "jest",
    "build": "preact build -no-prerender",
    "dev": "preact watch",
    "lint": "eslint src",
    "deploy": "npm run build && gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "eslint-config-developit",
    "settings": {
      "react": {
        "version": "latest"
      }
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "quotes": [
        2,
        "double"
      ],
      "comma-dangle": [
        2,
        "only-multiline"
      ],
      "object-curly-spacing": [
        2,
        "never"
      ],
      "react/sort-comp": "off",
      "react/jsx-indent-props": [
        2,
        2
      ]
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "babel-jest": "^24.8.0",
    "eslint": "^4.5.0",
    "eslint-config-developit": "^1.1.1",
    "eslint-plugin-compat": "^3.1.1",
    "gh-pages": "^2.0.1",
    "git-revision-webpack-plugin": "^3.0.3",
    "jest": "^24.8.0",
    "preact-cli": "^3.0.0-rc.1"
  },
  "dependencies": {
    "bulma": "^0.7.4",
    "classnames": "^2.2.6",
    "dexie": "^2.0.4",
    "history": "^4.9.0",
    "preact": "^8.4.2",
    "preact-markdown": "^0.5.0",
    "preact-router": "^2.6.1"
  }
}
