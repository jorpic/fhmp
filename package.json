{
  "private": true,
  "name": "fhmp",
  "version": "0.1.0",
  "author": "Max Taldykin <jorpic@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jorpic/fhmp/issues"
  },
  "homepage": "https://github.com/jorpic/fhmp#readme",
  "scripts": {
    "build": "preact build -no-prerender",
    "dev": "preact watch",
    "lint": "eslint src",
    "deploy": "npm run build && gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "eslint-config-synacor",
    "rules": {
      "no-unused-vars": "warn",
      "react/sort-comp": "off",
      "lines-around-comment": "off",
      "react/prefer-stateless-function": "off"
    }
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.8.1",
    "eslint": "^4.5.0",
    "eslint-config-synacor": "^1.1.0",
    "gh-pages": "^2.0.1",
    "preact-cli": "^3.0.0-mnext.19"
  },
  "dependencies": {
    "bulma": "^0.7.4",
    "classnames": "^2.2.6",
    "dexie": "^2.0.4",
    "preact": "^8.4.2",
    "preact-markdown": "^0.4.1"
  }
}
